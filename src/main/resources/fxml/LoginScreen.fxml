<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.LoginController" stylesheets="/styles/styles.css">
    
    <HBox prefHeight="550.0" prefWidth="850.0" styleClass="login-main-container"> 
    
        <VBox alignment="CENTER" prefWidth="350.0" styleClass="branding-panel">
            <children>
                <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/logo.png" /> 
                    </image>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </ImageView>
                </children>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
        </VBox>
        
        <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" styleClass="login-panel">
            <padding>
                <Insets bottom="70.0" left="70.0" right="70.0" top="70.0" /> 
            </padding>
            <children>
                <Label text="Đăng nhập hệ thống" styleClass="title-label">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="2.0" />
                    </VBox.margin>
                </Label>
                
                <Label text="Student Portal" styleClass="subtitle-label">
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </Label>

                <VBox spacing="25.0" styleClass="form-container" alignment="CENTER_LEFT">
                    <children>
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Tên đăng nhập / Mã sinh viên" styleClass="form-label" />
                                <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập của bạn" styleClass="modern-text-field" />
                            </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Mật khẩu" styleClass="form-label" />
                                <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu của bạn" styleClass="modern-text-field" />
                            </children>
                        </VBox>
                        
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" text="Đăng nhập" styleClass="login-button" defaultButton="true" disable="true">
                            <minHeight>40.0</minHeight>
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </Button>
                        
                        <Label text="Tài khoản và mật khẩu của bạn sẽ KHÔNG được lưu tới server..." styleClass="security-notice" wrapText="true">
                            <font>
                                <Font size="11.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        
                    </children>
                </VBox>
            </children>
        </VBox>
    </HBox>
</StackPane>