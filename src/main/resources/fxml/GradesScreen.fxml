<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.GradesController" stylesheets="/styles/styles.css">
   <top>
      <VBox spacing="10.0" styleClass="header-container">
         <padding>
            <Insets bottom="15.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="← Quay lại" styleClass="back-button" />
                  <Label text="Bảng điểm" styleClass="page-title">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="gpaLabel" text="" styleClass="gpa-label">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="statusLabel" text="Đang tải..." styleClass="status-label" />
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <TableView fx:id="gradesTable" styleClass="data-table">
               <columns>
                  <TableColumn fx:id="subjectColumn" prefWidth="250.0" text="Môn học" />
                  <TableColumn fx:id="creditColumn" prefWidth="80.0" text="Tín chỉ" />
                  <TableColumn fx:id="midtermColumn" prefWidth="100.0" text="Điểm giữa kỳ" />
                  <TableColumn fx:id="finalColumn" prefWidth="100.0" text="Điểm cuối kỳ" />
                  <TableColumn fx:id="averageColumn" prefWidth="100.0" text="Điểm trung bình" />
                  <TableColumn fx:id="letterGradeColumn" prefWidth="100.0" text="Điểm chữ" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>

